<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="AlertDialogTheme">
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">
            @color/colorControlNormal
        </item>
        <item name="android:windowBackground">@color/layout_bg_color</item>
        <item name="preferenceTheme">@style/Theme.Preference</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="alertDialogStyle">@style/AlertDialog.SkinCompat.Default</item>
        <item name="skinAlertDialogBackground">@color/layout_bg_color</item>
        <item name="skinAlertDialogTitleTextColor">@color/text_black</item>
        <item name="skinAlertDialogMessageTextColor">@color/text_black</item>
        <item name="skinAlertDialogNeutralButtonTextColor">@color/immutable_text_theme</item>
        <item name="skinAlertDialogNegativeButtonTextColor">@color/immutable_text_pink</item>
        <item name="skinAlertDialogPositiveButtonTextColor">@color/immutable_text_theme</item>
        <item name="skinAlertDialogControlHighlightColor">@color/immutable_text_theme</item>
        <item name="skinAlertDialogListDivider">@null</item>
        <item name="skinAlertDialogListItemTextColor">@color/text_black</item>
        <item name="skinListChoiceIndicatorMultiple">@drawable/skin_btn_check</item>
        <item name="skinListChoiceIndicatorSingle">@drawable/skin_btn_radio</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="elevation">0dp</item>
    </style>

    <style name="ActivityTranslucentTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBar" parent="AppBaseTheme">
        <item name="colorButtonNormal">@color/toolbar_text_color</item>
        <item name="colorControlNormal">@color/toolbar_text_color</item>
        <item name="actionMenuTextColor">@color/toolbar_text_color</item>
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="WelcomeTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowAnimationStyle">@style/ActivityAnimStyle</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CommonDialog" parent="android:Theme.Light">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActivityAnimStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_activity_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_activity_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_activity_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_activity_exit</item>
    </style>

    <style name="Theme.Preference" parent="PreferenceThemeOverlay">
        <item name="preferenceFragmentCompatStyle">@style/Widget.Preference.Fragment</item>
        <item name="preferenceStyle">@style/Widget.Preference</item>
        <item name="dialogPreferenceStyle">@style/Widget.DialogPreference</item>
        <item name="switchPreferenceStyle">@style/Widget.SwitchPreference</item>
        <item name="editTextPreferenceStyle">@style/Widget.EditPreference</item>
        <item name="preferenceCategoryStyle">@style/Widget.PreferenceCategory</item>
    </style>

    <style name="Widget.Preference.Fragment" parent="PreferenceFragment.Material">
        <item name="android:layout">@layout/layout_base_settings_fragment</item>
    </style>

    <style name="Widget.Preference" parent="Preference.Material">
        <item name="android:layout">@layout/layout_preference</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Widget.SwitchPreference" parent="Preference.SwitchPreference.Material">
        <item name="android:layout">@layout/layout_preference</item>
        <item name="android:widgetLayout">@layout/widget_switch</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Widget.DialogPreference" parent="Preference.DialogPreference.Material">
        <item name="android:layout">@layout/layout_preference</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Widget.EditPreference" parent="Preference.DialogPreference.EditTextPreference.Material">
        <item name="android:layout">@layout/layout_preference</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="Widget.PreferenceCategory" parent="Preference.Category.Material">
        <item name="android:layout">@layout/layout_preference_category</item>
        <item name="iconSpaceReserved">false</item>
    </style>

    <style name="AlertDialog.SkinCompat.Default">
        <item name="singleChoiceItemLayout">@layout/widget_select_dialog_singlechoice</item>
    </style>
</resources>
