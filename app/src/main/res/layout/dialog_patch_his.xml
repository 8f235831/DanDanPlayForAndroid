<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog">

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/title_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_black"
            android:text="热修复模式："/>


        <TextView
            android:id="@+id/fix_mode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/title_tip"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:textColor="@color/immutable_text_theme"
            android:text="自动"/>

        <ImageView
            android:id="@+id/about_sophix_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="9dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/ic_help_theme"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/his_tv"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:layout_below="@+id/title_rl"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_dialog_content"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:textColor="@color/text_black"
        android:textSize="14sp"
        android:text="" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/his_tv"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/confirm_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingEnd="20dp"
            android:paddingStart="10dp"
            android:textColor="@color/immutable_text_theme"
            android:text="确定"/>

        <TextView
            android:id="@+id/clear_his"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="10dp"
            android:textColor="@color/immutable_text_pink"
            android:text="清空历史"/>

    </RelativeLayout>

</RelativeLayout>