<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:layout_marginBottom="100dp"
    android:background="@drawable/bg_corner_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/dialog_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:text="搜索弹幕" />

            <ImageView
                android:id="@+id/dialog_cancel_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/ic_dialog_cancel"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="8dp"
                android:layout_alignParentBottom="true"
                android:background="@color/diver_color"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tips2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textSize="12sp"
            android:textColor="@color/gray_color3"
            android:text="旧任务需暂停后tracker才会对其生效"/>

        <EditText
            android:id="@+id/tracker_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:textSize="14sp"
            android:selectAllOnFocus="true"
            android:hint="tracker链接(支持批量导入)"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/bg_dialog_item_left"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/gray_color3"
                android:text="取消"/>
            <TextView
                android:id="@+id/confirm_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="@drawable/bg_dialog_item_right"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/theme_color"
                android:text="确定"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>