<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.xyoye.dandanplay.utils.scan.view.QRCodeReaderView
        android:id="@+id/qr_code_reader_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.xyoye.dandanplay.ui.weight.ScanWindowView
        android:id="@+id/finder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:preview_width="275dp"
        app:preview_height="275dp"
        app:preview_centerHorizontal="true"
        app:preview_y="114dp"
        app:show_frame="true"/>

    <TextView
        android:id="@+id/scan_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="419dp"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        android:text="请将二维码放入框内" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:src="@mipmap/ic_back_white"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:text=""/>
    </RelativeLayout>

</RelativeLayout>
