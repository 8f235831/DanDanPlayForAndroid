<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.xyoye.dandanplay.utils.scan.view.QRCodeReaderView
        android:id="@+id/qr_code_reader_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.xyoye.dandanplay.utils.scan.view.ScanWindowRelayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000">

        <com.xyoye.dandanplay.utils.scan.view.ScanWindowView
            android:id="@+id/scan_window_view"
            android:layout_width="275dp"
            android:layout_height="275dp"
            android:layout_marginTop="114dp"
            android:layout_centerHorizontal="true"
            app:show_frame="true"/>

    </com.xyoye.dandanplay.utils.scan.view.ScanWindowRelayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="419dp"
        android:textColor="@color/immutable_text_white"
        android:textSize="18sp"
        android:text="请将二维码放入框内" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingTop="5dp"
            android:paddingStart="10dp"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:src="@mipmap/ic_back_white"/>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/immutable_text_white"
            android:textSize="18sp"
            android:text=""/>
    </RelativeLayout>

</RelativeLayout>
