<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/fullscreen_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/control_bar_height"
        android:background="@color/bg_video_view"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_item_background"
            android:padding="10dp"
            android:src="@mipmap/ic_return_back"/>

        <com.player.ijkplayer.widgets.MarqueeTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <ProgressBar
            android:id="@+id/pb_battery"
            style="@style/ProgressBarBattery"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:max="100"/>

        <TextView
            android:id="@+id/tv_system_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/subtitle_settings_iv"
            android:layout_width="@dimen/settings_btn_width"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/sel_subtitle_setting"/>

        <TextView
            android:id="@+id/danmu_settings_tv"
            android:layout_width="@dimen/settings_btn_width"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="弹"
            android:gravity="center"
            android:textColor="@drawable/sel_danmu_setting"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/player_settings_iv"
            android:layout_width="@dimen/settings_btn_width"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/sel_player_setting" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/window_top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_back_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sel_item_background"
            android:padding="10dp"
            android:src="@mipmap/ic_return_back"/>
    </FrameLayout>

    <!--视频设置-->
    <LinearLayout
        android:id="@+id/player_setting_ll"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/bg_video_view"
        android:layout_gravity="end"
        android:visibility="gone">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:text="音视频"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:textSize="14sp"
                    android:text="视频尺寸"/>

                <RadioGroup
                    android:id="@+id/aspect_ratio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center_horizontal"
                    android:checkedButton="@id/aspect_fit_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/aspect_fit_parent"
                        style="@style/AspectRatioButton"
                        android:background="@drawable/sel_btn_ar_adjust_screen"/>

                    <RadioButton
                        android:id="@+id/aspect_fit_screen"
                        style="@style/AspectRatioButton"
                        android:background="@drawable/sel_btn_ar_adjust_video"/>

                    <RadioButton
                        android:id="@+id/aspect_16_and_9"
                        style="@style/AspectRatioButton"
                        android:background="@drawable/sel_btn_ar_16_9"/>

                    <RadioButton
                        android:id="@+id/aspect_4_and_3"
                        style="@style/AspectRatioButton"
                        android:background="@drawable/sel_btn_ar_4_3"/>
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/speed_ctrl_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:text="播放速度"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/speed50_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:text="0.5"/>

                        <TextView
                            android:id="@+id/speed75_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:text="0.75"/>

                        <TextView
                            android:id="@+id/speed100_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:text="1.0"/>

                        <TextView
                            android:id="@+id/speed125_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:text="1.25"/>

                        <TextView
                            android:id="@+id/speed150_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:text="1.5"/>

                        <TextView
                            android:id="@+id/speed200_tv"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:text="2.0"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/audio_track_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="14sp"
                        android:text="音频选择"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/audio_track_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/subtitle_track_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="14sp"
                        android:text="字幕选择"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/subtitle_track_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp">
                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

    <!--弹幕设置-->
    <com.player.ijkplayer.widgets.SettingDanmuView
        android:id="@+id/danmu_setting_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:visibility="gone">
    </com.player.ijkplayer.widgets.SettingDanmuView>

    <!--字幕设置-->
    <com.player.ijkplayer.widgets.SettingSubtitleView
        android:id="@+id/subtitle_setting_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:visibility="gone">
    </com.player.ijkplayer.widgets.SettingSubtitleView>
</merge>